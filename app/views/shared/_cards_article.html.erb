<div class="row" style="width: 100%">
 <% @articles.each do |article| %>
    <div class="col-xs-12 col-md-12">
      <div class="card-article-topics">
        <%= link_to("", article_path(article.id), class:"card-link")  %>
        <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1482990673175-a0cb26bf62bc?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60);">
          <div class="card-article-title center">
            <h6><%= article.governance.title %></h6>
            <p class="green chapter-font"><b><%= article.chapter %> <br> <%= article.section %></b></p>
          </div>
        </div>
        <div class="card-article-topics-list">
          <ul>
            <p class="text-inline"><u>Art.<%= article.number %>:</u></p>
          <% article.topics.each do |topic| %>
            <li><p class="text-inline"><i>#<%= topic.name %></i></p></li>
          <% end  %>
        </ul>
        </div>
      </div>
    </div>
  <% end %>
</div>

